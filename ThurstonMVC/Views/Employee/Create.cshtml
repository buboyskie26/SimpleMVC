@model ThurstonMVC.Models.ViewModel.AddEmployeeViewModel

<h3 class="text-center">Add Employee</h3>

<form method="post" asp-action="CreateEmployee">
    @* Display general validation errors *@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mt-3">
        <label class="form-label">* First Name</label>
        <input asp-for="FirstName" type="text" class="form-control" />
        @* Display validation error for FirstName *@
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">* Last Name</label>
        <input asp-for="LastName" type="text" class="form-control" />
        @* Display validation error for LastName *@
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">* Email</label>
        <input asp-for="Email" type="email" class="form-control" />
        @* Display validation error for Email *@
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">* Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
        @* Display validation error for DateOfBirth *@
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
